<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>URL Shortner</title>
</head>
<body>
    <div style="display: flex; align-items: center; justify-content: space-between;">
        <h2>URL Shortner</h2>
        <a href="/user/logout">Logout</a>
    </div>
    <%# If any error occured show the error %>
    <% if (locals.error) { %>
        <p style="color: red;"><%= error %></p>
    <% } %>
    <form action="/url/" method="post">
        <label for="orignal-url">Enter an URL</label>
        <input type="text" name="url" id="url">
        <input type="submit" value="Generate Short Link">
    </form>
    <%# If Link is generated show the link %>
    <% if (locals.success) { %>
        <h3>Link Generated: http://localhost:8000/<%= success %></h3>
    <% } %>

    <table cellpadding="8" border="2" style="margin-top: 2rem; text-align: center;">
        <thead>
            <th>S. No</th>
            <th>Short URL</th>
            <th>Redirect To</th>
            <th>Clicks</th>
        </thead>
        <tbody>
            <% locals.urls.forEach((url, index) => { %>
                <tr>
                    <td><%= index + 1 %></td>
                    <td><%= url.shortURL %></td>
                    <td><%= url.realURL %></td>
                    <td><%= url.visitHistory.length %></td>
                </tr>
            <% }) %>
        </tbody>
    </table>
</body>
</html>